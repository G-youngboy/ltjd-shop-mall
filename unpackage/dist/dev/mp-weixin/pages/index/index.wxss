}
.lt-banner-bg {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 180rpx;
	background: #E41F19;
	position: relative;
}
.lt-primary-bg {
	width: 50%;
	display: inline-block;
	height: 224rpx;
	border: 1px solid transparent;
	position: relative;
	z-index: 1;
	background: #E41F19;
}
.lt-route-left {
	-webkit-transform: skewY(8deg);
	        transform: skewY(8deg);
}
.lt-route-right {
	-webkit-transform: skewY(-8deg);
	        transform: skewY(-8deg);
}
.lt-banner-box {
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
