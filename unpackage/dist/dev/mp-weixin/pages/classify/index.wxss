
.lt-category-search {
	width: 100%;
	height: 92rpx;
	padding: 0 30rpx;
	background: #FFFFFF;
	border-bottom: 1rpx solid #F1F1F1;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
